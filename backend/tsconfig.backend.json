{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
